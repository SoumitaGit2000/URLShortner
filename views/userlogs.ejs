<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partial/head') %>
  <title>User Logs</title>
  <style>
    body {
      margin: 0;
      padding: 30px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f6f8;
      color: #333;
    }

    h1 {
      text-align: center;
      color: #2c3e50;
      font-size: 2.2em;
      margin-bottom: 40px;
    }

    #container {
      max-width: 1100px;
      margin: 0 auto;
      background-color: #ffffff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background-color: #2c3e50;
      color: #ecf0f1;
      padding: 16px 12px;
      font-size: 15px;
      font-weight: 600;
      text-align: center;
      border-bottom: 2px solid #ddd;
    }

    td {
      padding: 14px 10px;
      text-align: center;
      border-bottom: 1px solid #e0e0e0;
      font-size: 14px;
      color: #444;
    }

    tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    tr:hover {
      background-color: #f1f7ff;
    }

    .delete-btn {
      background-color: #e74c3c;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      font-size: 13px;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }

    .delete-btn:hover {
      background-color: #c0392b;
    }

    @media screen and (max-width: 768px) {
      table, th, td {
        font-size: 13px;
        padding: 10px 8px;
      }

      .delete-btn {
        padding: 5px 10px;
        font-size: 12px;
      }
    }

    @media screen and (max-width: 500px) {
      h1 {
        font-size: 1.5em;
      }

      #container {
        padding: 20px;
      }
    }
  </style>
</head>
<body>
<nav class="navbar navbar-light" style="background-color: #f5f7fa;">
    <div class="container-fluid justify-content-end">
        <p style="padding-right: 30px;"><a class="btn btn-outline-danger" href="/user/admincreate">Admin Create</a>  </p>
         <p><a class="btn btn-outline-danger" href="/user/adminlogout">Logout</a></p>
    </div>
</nav>

<!-- Bootstrap JS (Optional if you're not using collapse) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <h1>User Logs</h1>

  <% if (user && user.length > 0) { %>
    <div id="container">
      <table>
        <thead>
          <tr>
            <th>S. No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Roles</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% user.forEach((i, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= i.name %></td>
              <td><%= i.email %></td>
              <td><%= i.password %></td>
              <td><%= i.role %></td>
              <td><a href="/user/get/delete/<%= i.email %>" class="delete-btn">Delete</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <p style="text-align: center; color: #7f8c8d;">No users found.</p>
  <% } %>

</body>
</html>
